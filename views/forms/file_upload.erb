<% action = @convert ? "convert" : "validate/results" %>
<form method="post" action="/<%= action %>" enctype="multipart/form-data">

<% if @convert %>
<%= erb :'forms/conversion_options', :layout => false %>
<% end %>

<label for="document">File:</label>
<input name="document" id="uploadfile" size="30" type="file"/>
<br/><br/>
<% button_text = @convert? "Convert!" : "Validate!" %>
<button class="fg-button ui-state-default ui-corner-all" type="submit"><%= button_text %></button>
</form>
