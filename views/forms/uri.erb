<form method="get" action="<%= h action %>">

  <label for="document">Address:</label>
  <input name="document" id="uri" type="text" size="45"/>

  <br/>

  <% if locals[:use_premis_container] %>
  <input type="checkbox" name="use-premis-container">Use PREMIS container</input>
  <% end %>

  <br/>
  <br/>

  <button class="fg-button ui-state-default ui-corner-all" type="submit">
    <%= h submit_text %>
  </button>

</form>
