<% action = @convert ? "convert" : "validate" %>
<form method="get" action="/<%= action %>/results">

  <% if @convert == 'p2pim' %>
  <%= erb :'forms/conversion_options', :layout => false %>
  <% end %>

  <label for="document">Address:</label>
  <input name="document" id="uri" type="text" size="45"/>
  <br/>
  <br/>
  <% button_text = @convert? "Convert!" : "Validate!" %>
  <button class="fg-button ui-state-default ui-corner-all" type="submit"><%= button_text %></button>
</form>
