<?xml version="1.0" encoding="UTF-8"?>
<!-- PiM Validation Results -->

<% require 'time' %>

<validator CREATEDATE="<%= Time.now.xmlschema %>">
  <message><%= @results.empty? ? "VALID" : "INVALID" %></message>
<% unless @results.empty? %>
  <errors>
    <% @results.each_with_index do |e, i| %>
    <error ID="E<%= i %>">
      <type><%= e[:type] %></type>
      <name><%= e[:name] %></name>
      <line><%= e[:line] %></line>
      <message><%= e[:message] %></message>
    </error>
    <% end %>
  </errors>
  <% end %>
</validator>